{{>header}}

<script>
    window.wikiData = {
        type: "category",
        name: "{{name}}",
        history: {{{historySerialized}}}
    };
</script>
<script src="../assets/js/vendor/Chart.min.js" defer></script>
<script src='../assets/js/category-graph.js' defer></script>

<div class="container-lg px-3 my-5 markdown-body">
    <h1>{{name}}</h1>
    <div class='graph-container'>
        <label>Historic data: <select class='graph-container__controller'>
            <option selected value='prevalence'>prevalence</option>
            <option value='domains'># of domains</option>
        </select></label>
        <canvas class='graph-container__graph' width="300" height="300"></canvas>
    </div>
    <p>
        <strong>Domains:</strong>
        {{#domains}}
        <span>
            {{#known}}<a href="../domains/{{domain}}.html">{{/known}}{{domain}}{{#known}} ({{prevalence}}&#37;)</a>{{/known}}
        </span>,
        {{/domains}}
    </p>

</div>

{{>footer}}
